#!/bin/bash
# wolo-dev - 使用项目中的代码运行 wolo
# 用法: ./wolo-dev [wolo arguments]

set -e

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# 检查是否在项目根目录
if [ ! -f "pyproject.toml" ]; then
    echo "Error: 请在 wolo 项目根目录下运行此脚本" >&2
    exit 1
fi

# 使用 uv run 运行（自动使用项目代码）
exec uv run wolo "$@"
